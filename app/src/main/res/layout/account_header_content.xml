<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#0c0c0c"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TableLayout
            android:background="#020202"
            android:id="@+id/table_new"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/table_row_bg"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:text="Name" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:text="Contact No." />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:text="Site/Location" />

            </TableRow>
        </TableLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/table_new"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Name:"
        android:textColor="@color/txt_color"
        android:textSize="@dimen/text_size_normal"/>

    <EditText
        android:id="@+id/edit_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:maxLines="1"
        android:backgroundTint="@android:color/white"
        android:textColor="@color/colorWhite">

        <requestFocus />
    </EditText>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txt_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name:"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_normal"/>

        <EditText
            android:id="@+id/edit_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:maxLines="1"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txt_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile No:"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_normal"/>

        <EditText
            android:id="@+id/edit_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text|phone"
            android:ems="10"
            android:maxLines="1"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/colorWhite"/>


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txt_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Designation:"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_normal"/>

        <Spinner
            android:id="@+id/edit_desgination"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="?android:attr/spinnerDropDownItemStyle"
            android:drawableRight="@drawable/icon_arrow"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/colorWhite"/>


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txt_email_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_normal"/>

        <EditText
            android:id="@+id/edit_email_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text|textEmailAddress"
            android:ems="10"
            android:maxLines="1"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/save_contd_contact"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_buttons"
            android:text="Add Contact +"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/colorWhite"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/btn_save_contact"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_buttons"
            android:text="Save"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/colorWhite"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/save_contd_contact"
            android:layout_marginEnd="23dp" />


    </RelativeLayout>

</RelativeLayout>