<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DashBoard_Activity"
    android:background="#000"
    android:fitsSystemWindows="true"
    tools:showIn="@layout/app_bar_main">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Accounts"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginStart="9dp"
            android:layout_alignBottom="@+id/btn_leads"
            android:layout_alignParentStart="true"
            android:id="@+id/textView2" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@mipmap/accounts"
            android:id="@+id/btn_leads"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_opp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Opportunity"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_normal"
            android:layout_below="@+id/btn_config"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/btn_funnel"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:src="@mipmap/salesfunnel"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="175dp"
            android:src="@mipmap/oppertunity"
            android:id="@+id/btn_config"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Sales Funnel"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginBottom="31dp"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/btn_funnel"
            android:id="@+id/textView3" />

        <ImageView
            android:id="@+id/btn_follow"
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:src="@mipmap/followup"
            android:layout_alignTop="@+id/btn_funnel"
            android:layout_alignStart="@+id/btn_config"
            android:layout_marginStart="10dp"
            android:layout_alignBottom="@+id/textView3" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Follow Up"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginStart="13dp"
            android:layout_alignBottom="@+id/btn_follow"
            android:layout_alignStart="@+id/txt_opp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hor_line"
            android:id="@+id/imageView2"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/textView2" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ver_line"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
